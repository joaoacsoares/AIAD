<?xml version="1.0" encoding="UTF-8"?>

<applicationtype xmlns="http://jadex.sourceforge.net/jadex"
                 xmlns:env="http://jadex.sourceforge.net/jadex-envspace"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:schemaLocation="http://jadex.sourceforge.net/jadex
	                    http://jadex.sourceforge.net/jadex-application-2.4.xsd
	                    http://jadex.sourceforge.net/jadex-envspace
	                    http://jadex.sourceforge.net/jadex-envspace-2.4.xsd"
                 name="ControloIncendios" >

    <imports>
        <import>jadex.extension.envsupport.environment.space2d.*</import>
        <import>jadex.extension.envsupport.environment.DeltaTimeExecutor</import>
        <import>jadex.extension.envsupport.math.*</import>
        <import>jadex.extension.envsupport.dataview.*</import>
        <import>java.text.SimpleDateFormat</import>
        <import>java.util.Date</import>
        <import>jadex.extension.envsupport.observer.perspective.*</import>
        <import>jadex.extension.envsupport.evaluation.*</import>
        <import>jadex.extension.envsupport.observer.gui.plugin.*</import>
        <import>jadex.commons.future.*</import>
        <import>jadex.bridge.service.*</import>
        <import>jadex.bridge.service.search.*</import>
        <import>jadex.bridge.service.types.clock.IClockService</import>
        <import>FireFighting.Agents.Fireman.*</import>
    </imports>

    <extensiontypes>
        <env:envspacetype name="2dspace" class="Grid2D" width="10" height="10">
            <env:objecttypes>
                <env:objecttype name="fire">
                    <env:property name="position" class="IVector2" event="true"/>
                    <env:property name="extinct" class="boolean"/>
                </env:objecttype>

                <env:objecttype name="controlcenter">
                    <env:property name="fires" class="IVector2[]" event="true"/>
                    <env:property name="buildings" class="IVector2[]" event="true"/>
                </env:objecttype>

                <env:objecttype name="tree">
                    <env:property name="position" class="IVector2" event="true"/>
                    <env:property name="density" class="String" dynamic="true"/>
                    <env:property name="burnTime" class="String" dynamic="true"/>
                    <env:property name="hp" class="String" dynamic="true"/>
                    <env:property name="fuelTime" class="String" dynamic="true"/>
                    <env:property name="state" class="String" dynamic="true"/>
                </env:objecttype>

                <env:objecttype name="wind">
                    <env:property name="x" class="String" dynamic="true"/>
                    <env:property name="y" class="String" dynamic="true"/>
                </env:objecttype>

                <env:objecttype name="building">
                    <env:property name="position" class="IVector2" dynamic="true"/>
                    <env:property name="type" class="String" dynamic="true"/>
                </env:objecttype>

                <env:objecttype name="fireman">
                    <env:property name="position" event="false" dynamic="true"/>
                    <env:property name="speed" class="double" dynamic="true"/>
                    <env:property name="state" class="String" dynamic="true"/>
                </env:objecttype>

            </env:objecttypes>


            <env:tasktypes>
                <env:tasktype name="move" class="MoveTask" />
            </env:tasktypes>

            <env:processtypes>
                <env:processtype name="spread_fire" class="SpreadFireProcess"/>
                <env:processtype name="create_forest" class="CreateForestProcess"/>
            </env:processtypes>


            <env:dataviews>
                <env:dataview name="all_view" class="GeneralDataView2D"/>
            </env:dataviews>

            <env:avatarmappings>
            </env:avatarmappings>

            <env:perspectives>
                <env:perspective name="icons" class="Perspective2D" objectplacement="center">
                    <env:drawable objecttype="fireman" height="1.0" width="1.0">
                        <env:texturedrectangle layer="4" height="1" width="1" imagepath="images/fireman.png"/>
                    </env:drawable>


                    <env:drawable objecttype="fire" height="1.0" width="1.0">
                        <env:texturedrectangle layer="2" height="1" width="1" imagepath="images/fire.png"/>
                    </env:drawable>

                    <env:drawable objecttype="tree" height="1.0" width="1.0">
                        <env:texturedrectangle layer="1" height="1" width="1" imagepath="images/tree_brown.png">
                            <env:drawcondition>$object.density.equals(0)  &amp;&amp; ! $object.fuelTime.equals( $object.burnTime )</env:drawcondition>
                        </env:texturedrectangle>

                        <env:texturedrectangle layer="1" height="1" width="1" imagepath="images/tree_yellow.png">
                            <env:drawcondition>$object.density.equals(1)  &amp;&amp; ! $object.fuelTime.equals( $object.burnTime )</env:drawcondition>
                        </env:texturedrectangle>

                        <env:texturedrectangle layer="1" height="1" width="1" imagepath="images/tree_green.png">
                            <env:drawcondition>$object.density.equals(2) &amp;&amp; ! $object.fuelTime.equals( $object.burnTime )</env:drawcondition>
                        </env:texturedrectangle>
                        <env:texturedrectangle layer="1" height="1" width="1" imagepath="images/tree_burned.png">
                            <env:drawcondition> $object.fuelTime.equals( $object.burnTime ) </env:drawcondition>
                        </env:texturedrectangle>
                    </env:drawable>

                    <env:drawable objecttype="building" height="1.0" width="1.0">
                        <env:texturedrectangle layer="3" height="1" width="1" imagepath="images/house.png">
                            <env:drawcondition>$object.type.equals(1)</env:drawcondition>
                        </env:texturedrectangle>
                    </env:drawable>

                    <env:prelayers>
                        <env:tiledlayer width="0.4" height="0.4" imagepath="images/background.png"/>
                    </env:prelayers>
                    <env:postlayers>
                        <env:gridlayer width="1.0" height="1.0" color="black"/>
                    </env:postlayers>
                </env:perspective>
            </env:perspectives>

            <!-- executor -->
            <env:spaceexecutor class="DeltaTimeExecutor">
                <env:property name="space">$space</env:property>
                <env:property name="tick">true</env:property>
            </env:spaceexecutor>
        </env:envspacetype>
    </extensiontypes>

    <componenttypes>
        <componenttype name="Fireman" filename="FireFighting\Agents\FiremanBDI.class"/>
    </componenttypes>

    <configurations>
        <configuration name="Default">
            <extensions>
                <env:envspace name="2dspace" type="2dspace" width="10" height="10">

                    <env:objects>
                        <env:object type="building">
                            <env:property name="position">new Vector2Double(0, 0)</env:property>
                            <env:property name="type">1</env:property>
                        </env:object>

                        <env:object type="fire">
                            <env:property name="position">new Vector2Double(9, 9)</env:property>
                            <env:property name="extinct">false</env:property>
                        </env:object>
                    </env:objects>

                    <env:processes>
                        <env:process type="spread_fire"/>
                        <env:process type="create_forest"/>
                    </env:processes>


                    <env:observers>
                        <env:observer name="firefighting" dataview="view_all" perspective="icons"/>
                    </env:observers>
                </env:envspace>
            </extensions>

            <components>
                <component type="Fireman"/>
            </components>

        </configuration>
    </configurations>

</applicationtype>